{
  "name": "order-management-system",
  "version": "1.0.0",
  "description": "Complete Order Management System with React frontend and Spring Boot backend",
  "scripts": {
    "start": "concurrently --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,green\" \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && powershell -Command \"$env:JAVA_HOME = 'C:\\Program Files\\Java\\jdk-21'; .\\mvnw.cmd spring-boot:run\"",
    "start:frontend": "cd frontend && npm run dev",
    "dev": "npm run start",
    "install:all": "cd frontend && npm install",
    "build:frontend": "cd frontend && npm run build",
    "test:backend": "cd backend && mvnw.cmd test",
    "clean": "cd backend && mvnw.cmd clean && cd ../frontend && npm run build"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "order-management",
    "react",
    "spring-boot",
    "mongodb",
    "firebase"
  ],
  "author": "Order Management Team",
  "license": "MIT"
}
